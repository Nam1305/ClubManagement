<Window x:Class="ClubManagement.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagement"
        mc:Ignorable="d"
        Title="Reset Password" 
        Height="350" 
        Width="500" 
        WindowStartupLocation="CenterScreen" 
        Background="#F5F5F5">
    <Grid>
        <Border Background="White" 
                Width="400" 
                Height="260" 
                CornerRadius="15" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Reset Password" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <Label Content="Enter your email address:" FontWeight="Bold"/>
                <TextBox x:Name="txtResetEmail" 
                         Height="34" 
                         Padding="5" 
                         BorderBrush="#888" 
                         BorderThickness="1" 
                         Margin="0,0,0,20"/>

                <Button x:Name="btnSubmitReset" 
                        Content="Submit" 
                        Background="#0078D7" 
                        Foreground="White" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        Height="40" 
                        Margin="0,0,0,10" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Click="btnSubmitReset_Click"/>

                <Button x:Name="btnCancel" 
                        Content="Cancel" 
                        Margin="0,10,0,0" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="#0078D7" 
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>