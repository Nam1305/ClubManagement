<Window x:Class="ClubManagement.ChairmanApprove"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagement"
        mc:Ignorable="d"
        Title="ChairmanApprove" Height="450" Width="800">
    <Grid>
        <Border CornerRadius="10" BorderThickness="1" BorderBrush="Gray" Padding="10" Background="White" Margin="0,0,-26,-38">
            <StackPanel>

                <!-- Tiêu đề -->
                <TextBlock Text="📋 Phê Duyệt Thành Viên" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />

                <!-- Danh sách yêu cầu -->
                <ScrollViewer Height="300">
                    <DataGrid Name="dgApprove" AutoGenerateColumns="False" SelectionMode="Single" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding UserClubId}" Width="100"/>
                            <DataGridTextColumn Header="ID Thành viên" Binding="{Binding UserId}" Width="100"/>
                            <DataGridTextColumn Header="ID CLB" Binding="{Binding ClubId}" Width="100"/>
                            <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="150"/>
                            <DataGridTextColumn Header="Ngày đăng ký" Binding="{Binding AppliedAt, StringFormat='dd/MM/yyyy'}" Width="150"/>
                            <DataGridTextColumn Header="Ngày phê duyệt" Binding="{Binding ApprovedAt, StringFormat='dd/MM/yyyy'}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>

                <!-- Nút hành động -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="✔ Phê duyệt" IsEnabled="{Binding CanApprove}" Background="Green" Foreground="White" Padding="10,5" Margin="5"/>
                    <Button Content="❌ Từ chối" IsEnabled="{Binding CanApprove}" Background="Red" Foreground="White" Padding="10,5" Margin="5" />
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
