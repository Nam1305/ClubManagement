<Window x:Class="ClubManagement.AdminMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagement"
        mc:Ignorable="d"
        Title="AdminMenu" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to Club Management" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Button x:Name="btnManageMember" Content="Manage Members" Width="200" Height="50" Click="btnManageMember_Click" />
            <Button x:Name="btnManageClub" Content="Manage Club" Width="200" Height="50" Click="btnManageClub_Click" />
            <Button x:Name="btnLogout" Content="Logout" Width="200" Height="50" Background="Blue" Foreground="White" Click="btnLogout_Click" />
        </StackPanel>

    </Grid>
</Window>
