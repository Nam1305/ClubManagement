<Window x:Class="ClubManagement.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagement"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="550" Width="800" WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Grid>
        <Border Background="White" Width="444" Height="Auto" CornerRadius="15" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20" MinHeight="480">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Register" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Label Content="Full Name" FontWeight="Bold"/>
                <TextBox Name="txtFullName" Height="34" Padding="5" BorderBrush="#888" BorderThickness="1" Margin="0,0,0,10"/>

                <Label Content="Email" FontWeight="Bold"/>
                <TextBox Name="txtEmail" Height="34" Padding="5" BorderBrush="#888" BorderThickness="1" Margin="0,0,0,10"/>

                <Label Content="Student Number" FontWeight="Bold"/>
                <TextBox Name="txtStudentNumber" Height="34" Padding="5" BorderBrush="#888" BorderThickness="1" Margin="0,0,0,10"/>

                <Label Content="Username" FontWeight="Bold"/>
                <TextBox Name="txtUsername" Height="34" Padding="5" BorderBrush="#888" BorderThickness="1" Margin="0,0,0,10"/>

                <Label Content="Password" FontWeight="Bold"/>
                <PasswordBox Name="pwdPassword" Height="34" Padding="5" BorderBrush="#888" BorderThickness="1" Margin="0,0,0,20"/>

                <Button x:Name="btnRegister" Content="Register" Background="#0078D7" Foreground="White" FontSize="16" FontWeight="Bold" Height="40" Margin="0,0,0,0" BorderThickness="0" Cursor="Hand" Click="btnRegister_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>