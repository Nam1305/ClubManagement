<Window x:Class="ClubManagement.Memberhome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagement"
        mc:Ignorable="d"
        Title="Memberhome" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Click to button Edit Profile to update profile" TextWrapping="Wrap" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0" Foreground="Red" FontSize="20"/>
        <TextBlock Text="Click to button View list club joined to see clubs which you joined" TextWrapping="Wrap" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="0" Foreground="Red" FontSize="20"/>
        <TextBlock Text="Click to button View all Club to see all on the system" TextWrapping="Wrap" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="0" Foreground="Red" FontSize="20"/>
        <TextBlock Text="Click to button Notification to see your notification" TextWrapping="Wrap" HorizontalAlignment="Center" Grid.Column="3" Grid.Row="0" Foreground="Red" FontSize="20"/>

        <Button x:Name="btnEditProfile" MinWidth="80" Margin="3" Content="Edit Profile" Grid.Row="1" Grid.Column="0" Click="btnEditProfile_Click" />
        <Button x:Name="btnViewClubJoined" MinWidth="80" Margin="3" Content="View list Club Joined" Grid.Row="1" Grid.Column="1" Click="btnViewClubJoined_Click" />
        <Button x:Name="btnListAllClub" MinWidth="80" Margin="3" Content="View all Club" Grid.Row="1" Grid.Column="2" Click="btnListAllClub_Click" />
        <Button MinWidth="80" Margin="3" Content="Notification" Grid.Row="1" Grid.Column="3"/>
    </Grid>
</Window>
