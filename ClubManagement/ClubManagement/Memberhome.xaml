<Window x:Class="ClubManagement.Memberhome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagement"
        mc:Ignorable="d"
        Title="Memberhome" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to Club Management" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Button x:Name="btnEditProfile" Height="30" Width="200" Content="Edit Profile" Click="btnEditProfile_Click" />
            <Button x:Name="btnViewClubJoined" Height="30" Width="200" Content="View list Club Joined" Click="btnViewClubJoined_Click" />
            <Button x:Name="btnListAllClub" Height="30" Width="200" Content="View all Club" Click="btnListAllClub_Click" />
            <Button x:Name="btnEvent" Width="200" Height="30" Content="View events joined" Click="btnEvent_Click" />
            <Button x:Name="btnJoinEvent" Width="200" Height="30" Content="Join event" Click="btnJoinEvent_Click" />
            <Button x:Name="btnLogout" Content="Logout" Width="200" Height="50" Background="Blue" Foreground="White" Click="btnLogout_Click" />
        </StackPanel>


    </Grid>
</Window>
