<Window x:Class="ClubManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagement"
        mc:Ignorable="d"
        Title="LoginWindow" 
        Height="450" 
        Width="800" 
        WindowStartupLocation="CenterScreen" 
        Background="#F5F5F5">
    <Grid>
        <Border Background="White" 
                Width="400" 
                Height="360" 
                CornerRadius="15" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Login" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center" 
                          Margin="0,0,0,20"/>

                <Label Content="Username" FontWeight="Bold"/>
                <TextBox x:Name="txtUsername" 
                        Height="34" 
                        Padding="5" 
                        BorderBrush="#888" 
                        BorderThickness="1"/>

                <Label Content="Password" 
                      FontWeight="Bold" 
                      Margin="0,10,0,0"/>
                <PasswordBox x:Name="pwdPassword" 
                            Height="34" 
                            Padding="5" 
                            BorderBrush="#888" 
                            BorderThickness="1"/>

                <Button x:Name="btnLogin" 
                        Content="Login" 
                        Background="#0078D7" 
                        Foreground="White" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        Height="40" 
                        Margin="0,20,0,0" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Click="btnLogin_Click"/>

                <Button x:Name="btnForgotPassword" 
                        Content="Forgot Password?" 
                        Margin="0,10,0,0" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="#0078D7" 
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        Click="btnForgotPassword_Click"/>

                <TextBlock HorizontalAlignment="Center" 
                          Margin="0,15,0,0" 
                          FontSize="14">
                    Bạn chưa có tài khoản? 
                    <Hyperlink NavigateUri="RegisterWindow.xaml" 
                              Click="Hyperlink_Click" 
                              Foreground="#0078D7" 
                              TextDecorations="Underline">
                        Đăng ký ngay
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>