<Window x:Class="ClubManagement.ChairmanMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagement"
        mc:Ignorable="d"
        Title="ChairmanMenu" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to Club Management" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

            <Button Content="Manage Members" Width="200" Height="50" Name="btnMembers" Click="btnMembers_Click" />
            <Button Content="Manage Events" Width="200" Height="50" />
            <Button Content="Assign Task" Width="200" Height="50" Name="btnTask" Click="btnTask_Click"/>
            <Button Content="Finance Reports" Width="200" Height="50" />
            <Button Content="Logout" Width="200" Height="50" Background="Blue" Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
